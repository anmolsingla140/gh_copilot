<Project Sdk="Microsoft.NET.Sdk">

  <!-- Post-build event to copy the .gha to Grasshopper Libraries folder -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="Copy &quot;$(TargetPath)&quot; &quot;%25AppData%25\Grasshopper\Libraries\$(ProjectName).gha&quot;&#xD;&#xA;if exist &quot;%25AppData%25\Grasshopper\Libraries\CopilotScripts&quot; (&#xD;&#xA;    if not exist &quot;%25AppData%25\Grasshopper\Libraries\CopilotScripts\*&quot; (&#xD;&#xA;        del &quot;%25AppData%25\Grasshopper\Libraries\CopilotScripts&quot;&#xD;&#xA;    )" />
  </Target>
  <ItemGroup>
    <PackageReference Include="Grasshopper" Version="8.0.23066.13185-wip" IncludeAssets="compile;build" />
    <PackageReference Include="pythonnet" Version="3.0.5" />
    <PackageReference Include="RhinoCommon" Version="8.0.23066.13185-wip" IncludeAssets="compile;build" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Drawing" />
  </ItemGroup>
  </Project>
